{
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "macro": {
        "foreground": "#61afef" // Light blue for view! macro
      }
    }
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["entity.name.tag.html"],
        "settings": {
          "foreground": "#61afef" // Light blue for HTML-like tags
        }
      },
      {
        "scope": ["punctuation.definition.tag"],
        "settings": {
          "foreground": "#5c6370" // Subtle gray for < > brackets
        }
      },
      {
        "scope": ["entity.other.attribute-name"],
        "settings": {
          "foreground": "#98c379" // Light green for props/attributes
        }
      }
    ]
  }
}
